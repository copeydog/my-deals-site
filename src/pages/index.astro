---
import { getCollection } from 'astro:content';

const deals = await getCollection('deals');
const allCategories = [
  "Fashion",
  "Food & Drink",
  "Health & Beauty",
  "Home & Garden",
  "Kids",
  "Music",
  "Sport",
  "Technology",
  "TV & Film",
  "Travel",
  "Video Gaming"
].sort(); // Sort A–Z
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Wowza Deals</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        background: #f9f9f9;
      }

      header {
        background: #fff;
        border-bottom: 1px solid #ddd;
        padding: 1.2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        justify-content: center;
      }

      .logo {
        width: 80px;
        height: 80px;
        border-radius: 12px;
      }

      .site-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
      }

      .main-container {
        display: flex;
        max-width: 1300px;
        margin: 2rem auto;
        padding: 0 1rem;
        gap: 2rem;
      }

      aside {
        width: 220px;
        flex-shrink: 0;
        background: #fff;
        padding: 1rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        height: fit-content;
      }

      .search-bar {
        margin-bottom: 1.2rem;
      }

      .search-bar input {
  width: 100%;
  max-width: 100%;
  padding: 0.5rem;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1rem;
  box-sizing: border-box;
}

      aside h3 {
        margin-top: 0;
      }

      .category-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .category-list li {
        margin: 0.3rem 0;
      }

      .grid {
        flex: 1;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
      }

      .card {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
      }

      .card img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
        margin-bottom: 1rem;
      }

      .card h2 {
        margin: 0 0 0.5rem;
        font-size: 1.2rem;
      }

      .card p {
        margin: 0.2rem 0;
      }

      .buy-button {
        margin-top: auto;
        padding: 0.5rem;
        background: #0070f3;
        color: white;
        text-align: center;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
      }

      .buy-button:hover {
        background: #005ac1;
      }

      .hidden {
        display: none !important;
      }

      @media (max-width: 768px) {
        .main-container {
          flex-direction: column;
        }

        aside {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <img src="/logo.png" alt="Wowza Deals" class="logo" />
      <h1 class="site-title">Wowza Deals</h1>
    </header>

    <div class="main-container">
      <aside>
        <div class="search-bar">
          <input type="text" id="searchInput" placeholder="Search deals..." />
        </div>

        <h3>Categories</h3>
        <ul class="category-list">
          {allCategories.map((cat) => (
            <li>
              <label>
                <input type="checkbox" class="category-filter" value={cat} />
                {cat}
              </label>
            </li>
          ))}
        </ul>
      </aside>

      <div class="grid" id="dealsGrid">
        {deals.map((deal) => (
          <div class="card" data-category={deal.data.category} data-title={deal.data.title.toLowerCase()}>
            <img src={deal.data.image} alt={deal.data.title} />
            <h2>{deal.data.title}</h2>
            <p><strong>£{deal.data.price}</strong></p>
            <p>{deal.data.category}</p>
            <a class="buy-button" href={deal.data.affiliateLink} target="_blank">Buy Now</a>
          </div>
        ))}
      </div>
    </div>

    <script>
      const checkboxes = document.querySelectorAll(".category-filter");
      const cards = document.querySelectorAll(".card");
      const searchInput = document.getElementById("searchInput");

      function filterCards() {
        const activeCats = [...checkboxes].filter((c) => c.checked).map((c) => c.value);
        const search = searchInput.value.toLowerCase();

        cards.forEach((card) => {
          const cat = card.dataset.category;
          const title = card.dataset.title;
          const matchesCat = activeCats.length === 0 || activeCats.includes(cat);
          const matchesSearch = title.includes(search);
          card.classList.toggle("hidden", !(matchesCat && matchesSearch));
        });
      }

      checkboxes.forEach((box) => box.addEventListener("change", filterCards));
      searchInput.addEventListener("input", filterCards);
    </script>
  </body>
</html>
