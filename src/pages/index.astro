---
import { getCollection } from 'astro:content';

const deals = await getCollection('deals');
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Wowza Deals</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: sans-serif;
        margin: 0;
        padding: 1rem;
        background: #f6f6f6;
      }
      h1 {
        text-align: center;
        margin-bottom: 2rem;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
      }
      .card {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
      }
      .card img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 1rem;
      }
      .card h2 {
        margin: 0 0 0.5rem;
        font-size: 1.2rem;
      }
      .card p {
        margin: 0.2rem 0;
      }
      .buy-button {
        margin-top: auto;
        padding: 0.5rem;
        background: #0070f3;
        color: white;
        text-align: center;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>ðŸ”¥ Wowza Deals</h1>
    <div class="grid">
      {deals.map((deal) => (
        <div class="card">
          <img src={deal.data.image} alt={deal.data.title} />
          <h2>{deal.data.title}</h2>
          <p><strong>Â£{deal.data.price}</strong></p>
          <p>{deal.data.category}</p>
          <a class="buy-button" href={deal.data.affiliateLink} target="_blank">Buy Now</a>
        </div>
      ))}
    </div>
  </body>
</html>
